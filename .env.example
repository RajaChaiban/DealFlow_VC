# =============================================================================
# DealFlow AI Copilot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
#
# Required variables are marked with [REQUIRED].
# All others have sensible defaults for local development.
# =============================================================================

# -----------------------------------------------------------------------------
# App Settings
# -----------------------------------------------------------------------------
APP_NAME="DealFlow AI Copilot"
DEBUG=True

# -----------------------------------------------------------------------------
# Google AI [REQUIRED]
# -----------------------------------------------------------------------------
# Get your API key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# -----------------------------------------------------------------------------
# External APIs (optional - enables enrichment features)
# -----------------------------------------------------------------------------
PITCHBOOK_API_KEY=
CRUNCHBASE_API_KEY=
SERP_API_KEY=

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
UPLOAD_DIR=data/uploads
PROCESSED_DIR=data/processed
OUTPUT_DIR=data/outputs

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
DEFAULT_MODEL=gemini-1.5-pro-latest
DEFAULT_TEMPERATURE=0.3
MAX_TOKENS=2048

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
# Used by: docker-compose (postgres service) + SQLAlchemy
POSTGRES_USER=dealflow
POSTGRES_PASSWORD=dealflow
POSTGRES_DB=dealflow
POSTGRES_PORT=5432

# Full connection URL (used by the API service)
DATABASE_URL=postgresql+asyncpg://dealflow:dealflow@localhost:5432/dealflow

# Echo SQL statements for debugging (True/False)
DATABASE_ECHO=False

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# [REQUIRED in production] Generate a secure key:
#   python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=dealflow-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# API Key Authentication
# -----------------------------------------------------------------------------
# Comma-separated list of valid API keys for programmatic access.
# Leave empty to allow all keys in dev mode.
API_KEYS=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=200

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# -----------------------------------------------------------------------------
# Docker Compose Ports (override defaults)
# -----------------------------------------------------------------------------
API_PORT=8000
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Next.js Frontend
# -----------------------------------------------------------------------------
# The URL the frontend uses to reach the API
NEXT_PUBLIC_API_URL=http://localhost:8000
